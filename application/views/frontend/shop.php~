<script src="<?php echo base_url("jquery.validate.js")?>"></script>

<script type="text/javascript">

   $('body').on("click",".add-to-cart",function(){  
    var that = this;           
    var quantity = 1;    
    var product_id = $(this).attr('product_view');
    var final_price = $('#cart_base_price_' + product_id).text();  
    //var price = $('#cart_base_price_' + product_id).text();
    console.log(product_id);

            $.ajax({
                type: 'POST',
                url: "<?php echo base_url() . 'index.php/shop/add_to_cart/' ?>" + product_id + "/" +final_price + "/" + quantity,
                success: function(data) {
                  $(that).attr('disabled','true' ).text('Added to cart');
                }
            });
    });

</script> 


 